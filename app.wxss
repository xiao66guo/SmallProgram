/* 封装一：白色背景，分区间隔  */
/* page {
    background-color: #ccc;
} */

.bgw {
    background-color: #fff;
}

.mt20 {
    margin-top: 20rpx;
}

/* 封装二：用于做间隔的类  */
.divider {
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0 5rpx 5rpx rgba(0, 0, 0,.3) inset;
}

/* 封装三：细线边框  */
.bdr {
    position: relative;
}
.bdr::after {
    content: '';
    width: 1rpx;
    height: 100%;
    background-color: #ccc;
    position: absolute;
    right: 0;
    top: 0;
}

/* 封装四：箭头 */
.arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow::after {
    content: '';
    width: 20rpx;
    height: 20rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform: rotate(45deg);
    margin-right: 5rpx;
}

/* 封装五：水平垂直居中 */
.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 封装六：列表封装 */
.cell {
    font-size: 16px;
    background-color: #fff;
}
.cell-item {
    border-bottom: 1rpx solid #ddd;
    padding: 20rpx 30rpx;
}

/* 封装七：星星评分 */
.star-after {
    color: #e2e2e2;
}
.star-before {
    color: #f19e38;
    position: absolute;
    left: 0;
    top: 0;
    width: 85%;
    overflow: hidden;
}

/* 封装八：单行超出宽度变省略号 */
.ell {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/* 封装九：加载更多 */
.loadmore {
    color: #888;
    font-size: 16px;
    line-height: 100rpx;
    text-align: center;
}

.loadmore.loading::before {
    content:'';
    width: 40rpx;
    height: 40rpx;
    margin-top: -10rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
    animation: loading 1s setps(12) infinite;
    background: transparent url(data:image/png;base64,) no-repeat;
    background-size: 100%;
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(-360deg);
    }
}